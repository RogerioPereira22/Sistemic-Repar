{
  "compilerOptions": {
    
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"]
    },
    "target": "es5",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module":"commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "sourceMap": true,
  },
  "include": [
    "src",
    "src/payload.config.ts",
    "src/scripts/migrateVersions.ts"
  ],
  "exclude": [
    "node_modules",
  ],

  
  "ts-node": {
    "transpileOnly": true
  }
  
}
